<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  >

  <LinearLayout
    android:id="@+id/layout_recommand_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_16"
    android:orientation="vertical"
    >
    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginStart="16dp"
      android:text="인기 메뉴"
      android:textColor="@color/text_main"
      android:textSize="18sp"
      />

    <TextView
      android:id="@+id/recommand_menu_item_nothing"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="없음 미등록"
      android:textSize="18sp"
      android:visibility="gone"
      />

    <android.support.v7.widget.RecyclerView
      android:id="@+id/recommand_menu_recycle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:nestedScrollingEnabled="false"
      />

    <Button
      android:id="@+id/recommand_menu_item_more"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/margin_8"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:text="총 5개의 인기메뉴 모두보기"
      android:textSize="12sp"
      android:visibility="gone"
      />

  </LinearLayout>
  <LinearLayout
    android:id="@+id/layout_hot_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_16"
    android:orientation="vertical"
    >
    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginStart="16dp"
      android:text="인기 메뉴"
      android:textColor="@color/text_main"
      android:textSize="18sp"
      />
    <LinearLayout
      android:id="@+id/hot_menu_item_nothing"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:gravity="center"
      android:visibility="gone"
      >
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="없음 미등록"
        android:textSize="18sp"
        />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
      android:id="@+id/hot_menu_recycle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:nestedScrollingEnabled="false"
      />

    <Button
      android:id="@+id/hot_menu_item_more"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/margin_8"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:text="총 5개의 인기메뉴 모두보기"
      android:textSize="12sp"
      android:visibility="gone"
      />

  </LinearLayout>


  <LinearLayout
    android:id="@+id/layout_dangol_restaurant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_16"
    android:orientation="vertical"
    >

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginStart="16dp"
      android:text="단골 메뉴"
      android:textColor="@color/text_main"
      android:textSize="18sp"
      />

    <LinearLayout
      android:id="@+id/dangol_item_nothing"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:gravity="center"
      android:visibility="gone"
      >
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매장 미등록"
        android:textSize="18sp"
        />

    </LinearLayout>
    <!--안에서 margin 8dp-->
    <android.support.v7.widget.RecyclerView
      android:id="@+id/dangol_menu_recycle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginStart="@dimen/margin_8"

      android:layout_marginEnd="@dimen/margin_8"/>

    <Button
      android:id="@+id/dangol_item_more"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/margin_8"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:text="총 5개의단골 모두보기"
      android:textSize="12sp"
      android:visibility="gone"
      />

  </LinearLayout>
</LinearLayout>

