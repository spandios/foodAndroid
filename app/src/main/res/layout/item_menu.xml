<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/menu_master_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/menu_master_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴이름"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_main"
            android:lineSpacingExtra="6.5sp"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/menu_master_description"
            android:layout_below="@+id/menu_master_name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_sub"
            android:gravity="left"
            android:textSize="12sp"
            android:lineSpacingExtra="7.5sp"
            android:text=""

            />


        <TextView
            android:id="@+id/menu_master_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:text="가격"
            android:gravity="end"
            android:lineSpacingExtra="6.5sp"
            android:textColor="@color/price"
            android:layout_alignBottom="@+id/menu_master_name"
            android:layout_toEndOf="@+id/menu_master_name"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <!--Detail Menu start-->
    <LinearLayout
        android:id="@+id/detailHotMenu"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detailHotMenuPicture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/fm" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/detailHotMenuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="메뉴네임"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/common_google_signin_btn_text_dark"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/detailHotMenuPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/detailHotMenuName"
                    android:layout_marginTop="10dp"
                    android:text="가격"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/detailHotMenuPrice"
                    android:layout_alignBaseline="@+id/detailHotMenuPrice"
                    android:text="원"
                    android:textSize="20dp"/>


                <TextView
                    android:id="@+id/detailHotMenuRating"
                    android:layout_below="@id/detailHotMenuPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:text="평점"
                    />

                <TextView
                    android:id="@+id/detailHotMenuReviewTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/detailHotMenuRating"
                    android:layout_alignBaseline="@+id/detailHotMenuRating"
                    />

                <TextView
                    android:id="@+id/detailHotMenuDescritption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detailHotMenuRating"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:text="메뉴 설명"
                    android:textSize="20dp" />

            </RelativeLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <Button
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:layout_weight="4"
                android:text="장바구니 담기"
                android:id="@+id/detailHotMenuCart"
                />
            <Button
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:id="@+id/detailHotMenuOrder"
                android:text="주문하기 "
                />



        </LinearLayout>
</LinearLayout>
        <!--end-->
    </LinearLayout>




