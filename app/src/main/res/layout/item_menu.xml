<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/masterHotMenu"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        >

        <ImageView
            android:id="@+id/hotMenuPicture"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="2.5" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="7.5"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            >

            <TextView
                android:id="@+id/hotMenuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴이름"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/hotMenuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:text="가격" />
        </LinearLayout>


    </LinearLayout>

    <!--Detail Menu start-->
    <LinearLayout
        android:id="@+id/detailHotMenu"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detailHotMenuPicture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/intro" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/detailHotMenuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="메뉴네임"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/common_google_signin_btn_text_dark"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/detailHotMenuPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/detailHotMenuName"
                    android:layout_marginTop="10dp"
                    android:text="가격"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/detailHotMenuPrice"
                    android:layout_alignBaseline="@+id/detailHotMenuPrice"
                    android:text="원"
                    android:textSize="20dp"/>


                <TextView
                    android:id="@+id/detailHotMenuRating"
                    android:layout_below="@id/detailHotMenuPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:text="평점"
                    />

                <TextView
                    android:id="@+id/detailHotMenuReviewTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/detailHotMenuRating"
                    android:layout_alignBaseline="@+id/detailHotMenuRating"
                    />

                <TextView
                    android:id="@+id/detailHotMenuDescritption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detailHotMenuRating"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:text="메뉴 설명"
                    android:textSize="20dp" />

            </RelativeLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <Button
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:layout_weight="4"
                android:text="장바구니 담기"
                android:id="@+id/detailHotMenuCart"
                />
            <Button
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:layout_width="80dp"
                android:id="@+id/detailHotMenuOrder"
                android:text="주문하기 "
                />



        </LinearLayout>
</LinearLayout>
        <!--end-->
    </LinearLayout>




