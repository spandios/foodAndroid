<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.heojuyeong.foodandroid.DetailRestaurantActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/detailHotMenuHeader"
        >

        <Button
            android:id="@+id/detailBackButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/backbutton"
            android:layout_alignBottom="@+id/detailMapButton" />

        <Button
            android:id="@+id/detailMapButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/detailCartButton"
            android:background="@drawable/ic_explore_black_24dp" />

        <Button
            android:id="@+id/detailCartButton"
            android:background="@drawable/cart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" />

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:id="@+id/detailMenuCategoryParentScrollView2"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/detailMenuCategoryParent2"
            >
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/detailRestaurantScrollView"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/detailRestaurantLayout"
        >

        <ImageView
            android:id="@+id/detailRestImage"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rest_name"
                android:textSize="20dp"
                android:text="가게명"
                />
            <TextView
                android:id="@+id/detailRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rest_name"
                android:text="평점 "
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/detailDiscountString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailRating"
                android:layout_marginTop="5dp"
                android:text="포장 혜택 : " />

            <TextView
                android:id="@+id/detailDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/detailDiscountString"
                android:layout_toRightOf="@id/detailDiscountString"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/detailCommentList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="허주영 : 넘나 맛있어요!"
                android:layout_marginTop="5dp"
                android:layout_below="@id/detailDiscountString" />
        </RelativeLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"

        android:id="@+id/detailMenuCategoryParentScrollView"
        android:layout_below="@+id/detailRestaurantLayout"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/detailMenuCategoryParent"
            >
        </LinearLayout>
    </HorizontalScrollView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/detailMenuListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_below="@+id/detailMenuCategoryParentScrollView"
            android:scrollbars="none">
        </android.support.v7.widget.RecyclerView>

</RelativeLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="전화주문"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:text="장바구니"/>

    </LinearLayout>
</LinearLayout>

