<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fooddeuk.activity.MapActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_restaurant_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        >

        <TextView
            android:id="@+id/txt_restaurant_map_address"
            tools:text="강남구 논현동 59-9"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.Toolbar>

    <fragment
        android:id="@+id/restaurant_list_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/white"
        >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_map_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/txt_restaurant_map_menutype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="타이"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"


             />

        <TextView
            android:id="@+id/txt_restaurant_map_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정렬 : 거리 순"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txt_restaurarnt_map_maxdistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최대: 3km"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
             />


    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout_description_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:animateLayoutChanges="true"
        android:elevation="2dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rest_map_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"

            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/rest_map_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/rest_map_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="5dp"
                android:text="text"
                android:scrollbars="vertical"
                android:textSize="14sp" />

        </LinearLayout>




    </LinearLayout>
    </FrameLayout>
</LinearLayout>
