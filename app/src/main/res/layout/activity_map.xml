<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  >


  <android.support.v7.widget.Toolbar
    android:id="@+id/tool_restaurant_map"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:animateLayoutChanges="true"
    android:background="@color/test"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/txt_restaurant_map_address"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:textSize="18sp"
      tools:text="강남구 논현동"/>

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginRight="@dimen/margin_8"
      android:layout_gravity="right"
      android:src="@drawable/ic_filter"
      />
  </android.support.v7.widget.Toolbar>


  <!--맵 이동을 완료할 때만 주소와 매장 새로고침-->
  <com.example.fooddeuk.custom.TouchableWrapper
    android:id="@+id/mapParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
      android:id="@+id/restaurant_list_map"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:name="com.google.android.gms.maps.SupportMapFragment"/>
  </com.example.fooddeuk.custom.TouchableWrapper>


  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:animateLayoutChanges="true"
    android:background="@color/test"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="16dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="40dp"
    >


    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="pick"
      />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="content"
      />



  </LinearLayout>






