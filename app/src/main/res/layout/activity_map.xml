<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fooddeuk.activity.MapActivity">

    <LinearLayout
        android:id="@+id/rest_map_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="fefefef"
            android:textSize="18sp"/>

    </LinearLayout>

    <fragment
        android:id="@+id/restaurant_list_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/rest_map_title" />

    <LinearLayout
        android:id="@+id/rest_description_box"
        android:layout_width="match_parent"
        android:layout_height="76dp"

        android:layout_margin="16dp"
        android:layout_marginBottom="8dp"
        android:animateLayoutChanges="true"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_type_image"
                android:layout_width="50dp"
                android:layout_height="50dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rest_map_desc_name"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_description"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="5dp"
                android:text="text"
                android:scrollbars="vertical"

                android:textSize="13sp" />

        </LinearLayout>




    </LinearLayout>
</RelativeLayout>
