<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fooddeuk.activity.LoginActivity">
    <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
        android:id="@+id/btn_logic_naver"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/btn_login_phone"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="폰 번호로 로그인"
        app:layout_constraintBottom_toTopOf="@+id/btn_login_kakao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <Button
        android:id="@+id/btn_login_kakao"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:drawableStart="@drawable/icon_kakao"
        android:text="카카오로 로그인"
        app:layout_constraintBottom_toTopOf="@+id/btn_login_naver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_phone" />


    <Button
        android:text="네이버로 로그인"
        android:id="@+id/btn_login_naver"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_login_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_kakao"
        android:drawableStart="@drawable/icon_naver"
        />

    <Button
        android:drawableStart="@drawable/icon_facebook"
        android:id="@+id/btn_login_facebook"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="페이스북로 로그인"
        app:layout_constraintBottom_toTopOf="@+id/btn_login_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_naver" />

    <Button
        android:id="@+id/btn_login_email"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="이메일로 로그인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_facebook" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나는 귀찮다 바로 로그인한다."
        app:layout_constraintBottom_toTopOf="@+id/btn_login_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51"
        app:layout_constraintVertical_chainStyle="spread" />

    <com.kakao.usermgmt.LoginButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_logic_kakao"
        />

</android.support.constraint.ConstraintLayout>
