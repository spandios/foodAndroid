<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_below="@id/anchor"
  >

  <android.support.constraint.ConstraintLayout
    android:id="@+id/home_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.Guideline
      android:id="@+id/guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.33"/>

    <android.support.constraint.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.66"/>

    <android.support.constraint.Guideline
      android:id="@+id/guideline3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.99"/>

    <android.support.constraint.Guideline
      android:id="@+id/guideline4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.5"/>

    <Button
      android:id="@+id/home_menu_anything"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:text="아무거나"
      app:layout_constraintBottom_toBottomOf="@id/guideline4"
      app:layout_constraintEnd_toEndOf="@id/guideline"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <Button
      android:id="@+id/home_menu_cafe"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:text="까페"
      app:layout_constraintBottom_toTopOf="@id/guideline4"
      app:layout_constraintEnd_toStartOf="@id/guideline2"
      app:layout_constraintStart_toEndOf="@+id/guideline"
      app:layout_constraintTop_toTopOf="parent"

      />

    <Button
      android:id="@+id/home_menu_chicken"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:text="치킨"
      app:layout_constraintBottom_toTopOf="@id/guideline4"
      app:layout_constraintEnd_toEndOf="@id/guideline3"
      app:layout_constraintStart_toStartOf="@+id/guideline2"
      app:layout_constraintTop_toTopOf="parent"/>

    <Button
      android:id="@+id/item4"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:text="타이"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/guideline"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/guideline4"/>

    <Button
      android:id="@+id/home_menu_korean"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:text="한식"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/guideline2"
      app:layout_constraintStart_toStartOf="@id/guideline"
      app:layout_constraintTop_toBottomOf="@id/guideline4"/>

    <Button
      android:id="@+id/home_menu_chinese"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:text="중식"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/guideline3"
      app:layout_constraintStart_toStartOf="@id/guideline2"
      app:layout_constraintTop_toBottomOf="@id/guideline4"/>

  </android.support.constraint.ConstraintLayout>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/home_location_layout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:layout_constraintTop_toBottomOf="@id/home_menu_layout">

    <android.support.constraint.Guideline
      android:id="@+id/guideline5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.3"/>

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="8dp"
      android:text="장소로 찾기"
      android:textColor="@color/text_main"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="@id/guideline5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

    <Button
      android:id="@+id/home_select_location"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/margin_8"
      android:text="지정장소"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/home_menu_metro"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/guideline5"
      />

    <Button
      android:id="@+id/home_menu_metro"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/margin_8"
      android:text="지하철"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/home_univ"
      app:layout_constraintStart_toEndOf="@id/home_select_location"
      app:layout_constraintTop_toBottomOf="@id/guideline5"/>

    <Button
      android:id="@+id/home_univ"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/margin_8"
      android:text="대학교"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/home_menu_metro"
      app:layout_constraintTop_toBottomOf="@id/guideline5"/>


  </android.support.constraint.ConstraintLayout>


  <LinearLayout
    android:id="@+id/home_event_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/home_location_layout"
    >

    <TextView
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:background="@color/colorPrimary"
      android:gravity="center"
      android:text="기획1"
      android:textSize="24sp"
      />
    <TextView
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:background="@color/silver"
      android:gravity="center"
      android:text="기획2"
      android:textSize="24sp"
      />
    <TextView
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:background="@color/tangerine"
      android:gravity="center"
      android:text="기획3"
      android:textSize="24sp"
      />
    <TextView
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:gravity="center"
      android:text="기획4"
      android:textSize="24sp"
      />

  </LinearLayout>
  <LinearLayout
    android:id="@+id/layout_dangol"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/home_event_list"
    >

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="단골매장"
      android:textColor="@color/text_main"
      android:textSize="18sp"
      />

    <android.support.v7.widget.RecyclerView
      android:id="@+id/dangol_rest_recycle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:focusable="false"
      android:nestedScrollingEnabled="false"
      />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/layout_recent_restaurant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/layout_dangol"
    >

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="최근 본 매장"
      android:textColor="@color/text_main"
      android:textSize="18sp"
      />

    <android.support.v7.widget.RecyclerView
      android:id="@+id/recent_rest_recycle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:focusable="false"
      android:nestedScrollingEnabled="false"
      />

  </LinearLayout>

</android.support.constraint.ConstraintLayout>