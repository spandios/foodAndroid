<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailHotMenuPicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/intro" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/detailHotMenuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="메뉴네임"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detailHotMenuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/detailHotMenuName"
                android:layout_marginTop="10dp"
                android:text="가격"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/detailHotMenuPrice"
                android:layout_alignBaseline="@+id/detailHotMenuPrice"
                android:text="원"
                android:textSize="20dp"/>


            <TextView
                android:id="@+id/detailHotMenuRating"
                android:layout_below="@id/detailHotMenuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="평점"
                />

            <TextView
                android:id="@+id/detailHotMenuReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="리뷰[갯수]"
                android:textSize="20sp"
                android:layout_toRightOf="@id/detailHotMenuRating"
                android:layout_alignBaseline="@+id/detailHotMenuRating"
                />

            <TextView
                android:id="@+id/detailHotMenuDescritption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailHotMenuRating"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="메뉴 설명"
                android:textSize="20dp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        >

        <Button
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:layout_centerInParent="true"
            android:id="@+id/menuSelectButton"
            android:text="선택"
            />



    </RelativeLayout>






</LinearLayout>