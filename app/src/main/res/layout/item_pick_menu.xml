<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  android:orientation="vertical"
  >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    >
    <ImageView
      android:id="@+id/pick_menu_item_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5"
    android:orientation="vertical"
    >

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView

        android:id="@+id/pick_menu_item_name"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity=""
        android:lineSpacingExtra="4sp"
        android:textColor="@color/charcoal_grey"
        android:textSize="16sp"
        tools:text="얌타이"
        />

    </LinearLayout>


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <RatingBar

        android:id="@+id/pick_menu_item_rating_star"
        style="@style/CustomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="4.5"
        android:stepSize="0.5"
        app:layout_constraintLeft_toRightOf="@id/rest_detail_rating"
        app:layout_constraintTop_toTopOf="parent"/>


      <TextView
        android:id="@+id/pick_menu_item_reviewcnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="3dp"
        android:lineSpacingExtra="11.5sp"
        android:textColor="@color/text_sub"
        android:textSize="14sp"
        tools:text="(123)"
        />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:gravity="center_vertical"
      >

      <ImageView
        android:layout_width="18dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_explore_black_24dp"
        />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.4km"
        />

      <ImageView
        android:layout_width="18dp"
        android:layout_height="16dp"
        android:layout_marginStart="@dimen/margin_16"
        android:src="@drawable/ic_alarm_on_black_24dp"
        />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30분"
        />


    </LinearLayout>


    <!--<TextView-->
    <!--android:id="@+id/dangol_item_sale"-->
    <!--android:textStyle="bold"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="6dp"-->
    <!--android:gravity="center_horizontal"-->
    <!--android:text="포장 시 최대: -10%"-->
    <!--android:textAlignment="gravity"-->
    <!--android:textColor="@color/tangerine"-->
    <!--android:textSize="14sp"/>-->


  </LinearLayout>


</LinearLayout>