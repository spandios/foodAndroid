<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  >
    <TextView
      android:id="@+id/order_history_menu_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="10dp"
      android:textStyle="bold"
      android:text="메뉴이름"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:textSize="18sp"/>

    <TextView
      android:id="@+id/order_history_menu_count_x"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="x"
      android:layout_marginLeft="@dimen/margin_8"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/order_history_menu_name"


      />
    <TextView
      android:id="@+id/order_history_menu_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="10dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/order_history_menu_count_x"
      android:textSize="14sp"
      tools:text="1"/>

    <LinearLayout
      android:layout_marginTop="2dp"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toBottomOf="@id/order_history_menu_name"
      android:id="@+id/layout_order_menu_option"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >


    </LinearLayout>




</android.support.constraint.ConstraintLayout>