<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false"
            >

            <RelativeLayout
                android:id="@+id/home_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--TEMP-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rv2"
                    android:foreground="@drawable/gradient_background"
                    />

                <android.support.v4.view.ViewPager
                    android:visibility="gone"
                    android:id="@+id/home_event_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rv"/>

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/home_event_viewpager_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="20dp"
                    app:ci_gravity="center" />
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                app:layout_collapseMode="pin"
                android:background="@color/colorPrimary"
                tools:background="#00000000"
                >
                <TextView
                    android:id="@+id/header_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="주소"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    />

                <ImageView
                    android:id="@+id/home_header_search"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    tools:background="@drawable/ic_search"
                    android:layout_gravity="right|center_vertical"
                    />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/fragment_home_content"/>


</android.support.design.widget.CoordinatorLayout>

