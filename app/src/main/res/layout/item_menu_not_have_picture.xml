<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/menu_master_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        >

        <TextView
            android:id="@+id/menu_master_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:lineSpacingExtra="6.5sp"
            android:text="메뉴이름"
            android:textColor="@color/text_main"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.51" />

        <TextView
            android:id="@+id/menu_master_description"
            android:layout_below="@+id/menu_master_name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_sub"
            android:gravity="left"
            android:textSize="12sp"
            android:lineSpacingExtra="7.5sp"
            android:text=""
            />


        <TextView
            android:id="@+id/menu_master_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/menu_master_name"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/menu_master_name"
            android:gravity="end"
            android:lineSpacingExtra="6.5sp"
            android:text="가격"
            android:textColor="@color/price"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.507" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#6b6969"/>

    <!--DetMenuCetegoryMenu start-->
    <LinearLayout
        android:id="@+id/menu_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/menu_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="244dp"
                android:layout_marginTop="16dp"
                android:text="메뉴네임"
                android:textColor="@color/text_main"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/menu_detail_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평점"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/menu_detail_name"
                app:layout_constraintStart_toEndOf="@id/menu_detail_rating_bar"
                />

            <RatingBar
                android:id="@+id/menu_detail_rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_detail_name" />

            <TextView
                android:id="@+id/menu_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격"
                android:textSize="20dp"
                 />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="원"
                android:textSize="20dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/menu_detail_price"
                app:layout_constraintLeft_toRightOf="@id/menu_detail_price" />

            <TextView
                android:id="@+id/menu_detail_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="280dp"
                android:layout_marginTop="8dp"
                android:text="리뷰"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_detail_picture"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/menu_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="268dp"
                android:layout_marginTop="92dp"
                android:text="메뉴 설명"
                android:textSize="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_detail_price" />


        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/menu_detail_cart"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="닫기" />

            <Button
                android:id="@+id/menu_detail_order"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="주문하기 " />


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#6b6969"/>
</LinearLayout>

        <!--end-->





