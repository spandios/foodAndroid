<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/menu_master_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        >

        <ImageView
            android:id="@+id/menu_master_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />


        <TextView
            android:id="@+id/menu_master_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="left"
            android:lineSpacingExtra="6.5sp"
            android:text="메뉴이름"
            android:textColor="@color/text_main"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/menu_master_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.507" />


        <TextView
            android:id="@+id/menu_master_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/menu_master_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/menu_master_name"
            android:gravity="end"
            android:lineSpacingExtra="6.5sp"
            android:text="가격"
            android:textColor="@color/price"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </android.support.constraint.ConstraintLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#817e7e"/>

    <!--Detail Menu start-->


        <LinearLayout
            android:id="@+id/menu_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:visibility="visible">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/menu_detail_picture"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"

                    android:layout_marginStart="36dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/fm" />


                <TextView
                    android:id="@+id/menu_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="80dp"
                    android:layout_marginTop="16dp"
                    android:text="메뉴네임"
                    android:textColor="@color/tangerine"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/menu_detail_rating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="5.0"
                    android:textSize="18sp"
                    android:textColor="@color/tangerine"
                    app:layout_constraintTop_toBottomOf="@id/menu_detail_name"
                    app:layout_constraintStart_toStartOf="@id/menu_detail_name" />

                <RatingBar
                    android:id="@+id/menu_detail_rating_bar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5.0"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@id/menu_detail_rating"
                    app:layout_constraintTop_toBottomOf="@id/menu_detail_name"
                     />

                <TextView
                    android:id="@+id/menu_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textSize="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/menu_detail_rating"
                    app:layout_constraintStart_toStartOf="@id/menu_detail_rating"

                    />


                <TextView
                    android:id="@+id/menu_detail_review"
                    android:layout_width="69dp"
                    android:layout_height="18dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:text="(리뷰갯수)"
                    android:textColor="@color/text_main"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/menu_detail_picture"
                    app:layout_constraintVertical_bias="1.0"
                    tools:layout_editor_absoluteX="96dp" />

                <TextView
                    android:id="@+id/rest_detail_review_text"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="8dp"
                    android:text="리뷰"
                    android:textColor="@color/text_main"
                    android:textSize="16sp"
                    app:layout_constraintRight_toLeftOf="@id/menu_detail_review"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/menu_detail_picture" />

                <TextView
                    android:id="@+id/menu_detail_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="메뉴 설명"
                    android:textSize="20dp"

                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="@id/menu_detail_price"
                    app:layout_constraintTop_toBottomOf="@id/menu_detail_price" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="80dp"
                    android:layout_weight="4"
                    android:text="닫기"
                    android:id="@+id/detailHotMenuCart"
                    />
                <Button
                    android:layout_weight="6"
                    android:layout_height="match_parent"
                    android:layout_width="80dp"
                    android:id="@+id/detailHotMenuOrder"
                    android:text="주문하기"
                    />

            </LinearLayout>




        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#6b6969"/>
</LinearLayout>






