<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/menu_master_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        >

        <ImageView
            android:padding="4dp"
            android:layout_marginLeft="@dimen/margin_18"
            android:id="@+id/menu_master_picture"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/txt_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="100dp"
            android:gravity="left"
            android:lineSpacingExtra="6.5sp"
            android:text="메뉴이름"
            android:textColor="@color/text_main"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/menu_master_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17dp"
            android:gravity="end"
            android:lineSpacingExtra="6.5sp"
            android:textColor="@color/price"

            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider" />
    </RelativeLayout>


    <!--DetMenuCetegoryMenu start-->


    <LinearLayout
        android:id="@+id/menu_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_menu_detail"
            android:layout_width="match_parent"
            android:layout_height="240dp" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/menu_detail_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/menu_detail_necessary_option_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/menu_detail_option_necessary_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="사이즈"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/menu_detail_option_necessary_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"

                    />

                <TextView
                    android:id="@+id/menu_detail_option_necessary_content"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toLeftOf="@id/menu_detail_option_necessary_arrow"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#817e7e" />


            <RelativeLayout
                android:id="@+id/menu_detail_unnecessary_option_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/menu_detail_option_unnecessary_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="선택옵션"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/menu_detail_option_unnecessary_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"

                    />

                <TextView
                    android:id="@+id/menu_detail_option_unnecessary_content"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toLeftOf="@id/menu_detail_option_unnecessary_arrow"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/divider" />

        <Button
            android:id="@+id/menu_detail_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="바로 주문하기"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"

            />

    </LinearLayout>


</LinearLayout>








