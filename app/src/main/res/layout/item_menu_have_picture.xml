<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/menu_master_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/menu_master_picture"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/menu_master_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_18"
            android:gravity="left"
            android:lineSpacingExtra="6.5sp"
            android:text="메뉴이름"
            android:textColor="@color/text_main"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/menu_master_picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.507" />


        <TextView
            android:id="@+id/menu_master_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:gravity="end"
            android:lineSpacingExtra="6.5sp"
            android:text="가격"
            android:textColor="@color/price"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"

            app:layout_constraintBottom_toBottomOf="parent" />


    </android.support.constraint.ConstraintLayout>


    <!--DetMenuCetegoryMenu start-->


    <LinearLayout
        android:id="@+id/menu_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_menu_detail"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <!--<TextView-->
        <!--android:id="@+id/menu_detail_description"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginEnd="35dp"-->
        <!--android:layout_marginStart="35dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:lineSpacingExtra="6dp"-->
        <!--android:text="메뉴 설명"-->
        <!--android:textSize="17sp" />-->


        <LinearLayout
            android:id="@+id/menu_detail_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/menu_detail_necessary_option_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginTop="8dp"
                        android:background="#CC817e7e" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="필수옵션"
                        android:textSize="14sp"
                        android:textStyle="bold"


                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/menu_detail_option_necessary_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="사이즈"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/menu_detail_option_necessary_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"

                    />

                <TextView
                    android:id="@+id/menu_detail_option_necessary_content"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toLeftOf="@id/menu_detail_option_necessary_arrow"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#817e7e" />


            <RelativeLayout
                android:id="@+id/menu_detail_unnecessary_option_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/menu_detail_option_unnecessary_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="선택옵션"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/menu_detail_option_unnecessary_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"

                    />

                <TextView
                    android:id="@+id/menu_detail_option_unnecessary_content"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toLeftOf="@id/menu_detail_option_unnecessary_arrow"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/divider" />

        <Button
            android:id="@+id/menu_detail_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="바로 주문하기"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>








