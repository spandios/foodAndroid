<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_name"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:text="메뉴이름"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_price"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/cart_menu_name"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="가격"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_delete_button"
        android:text="X"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_option_layout"
        android:orientation="vertical"
        android:layout_below="@+id/cart_menu_name"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        >


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_option_price"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/cart_menu_price"
        android:layout_alignParentRight="true"
        android:text="가격"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20sp"
        android:layout_below="@+id/cart_menu_option_layout"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/cart_menu_minus"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="30sp"
        android:layout_below="@+id/cart_menu_option_layout"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/cart_menu_minus"
        android:layout_alignBaseline="@+id/cart_menu_minus"
        android:id="@+id/cart_menu_quantity"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_below="@+id/cart_menu_option_layout"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/cart_menu_quantity"
        android:layout_alignBaseline="@+id/cart_menu_minus"
        android:textSize="20sp"
        android:id="@+id/cart_menu_plus"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cart_menu_option_price"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="가격"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/cart_menu_minus"
        android:id="@+id/cart_menu_result_price"
        />


</RelativeLayout>