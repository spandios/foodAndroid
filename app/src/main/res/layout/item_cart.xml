<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_cart_menu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/rv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_name"
        android:textSize="18sp"
        android:layout_toRightOf="@id/img_cart_menu"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/text_main"
        android:text="메뉴이름"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_price"
        android:layout_toRightOf="@id/img_cart_menu"
        android:layout_below="@id/cart_menu_name"
        android:layout_alignStart="@id/cart_menu_name"
        android:layout_marginTop="@dimen/margin_8"
        android:text="가격"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_delete_button"
        android:text="X"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_18"

        />

    <TextView
        android:id="@+id/txt_cart_menu_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_menu_price"
        android:layout_alignStart="@id/cart_menu_price"
        android:text="평균 30분 소요"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/margin_8"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_option_layout"
        android:orientation="vertical"
        android:layout_below="@+id/cart_menu_name"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        >


    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_cart_quantity"
        android:layout_below="@id/img_cart_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/ic_remove_black_24dp"
        android:textSize="24sp"
        android:id="@+id/cart_menu_minus"
        android:gravity="center"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="1"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_8"
        android:id="@+id/cart_menu_quantity"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_marginStart="@dimen/margin_8"
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/cart_menu_plus"
        />


    </LinearLayout>
    <TextView
        android:layout_below="@+id/layout_parent_cart_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="가격"

        android:id="@+id/cart_menu_result_price"
        android:textColor="@color/tangerine"
        />

    <LinearLayout
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_below="@+id/img_cart_menu"
        android:id="@+id/layout_parent_cart_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical">


        <RelativeLayout
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/recycle_cart_menu_necessary_option"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/cart_option_necessary_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="사이즈"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menu_detail_option_necessary_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"

                />

            <TextView
                android:id="@+id/txt_cart_option_necessary_content"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@id/menu_detail_option_necessary_arrow"
                android:ellipsize="end"
                android:gravity="right"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#817e7e" />


        <RelativeLayout
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/layout_cart_menu_unnecessary_option"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/menu_detail_option_unnecessary_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="선택옵션"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menu_detail_option_unnecessary_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"

                />

            <TextView
                android:id="@+id/menu_detail_option_unnecessary_content"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@id/menu_detail_option_unnecessary_arrow"
                android:ellipsize="end"
                android:gravity="right"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="12sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>