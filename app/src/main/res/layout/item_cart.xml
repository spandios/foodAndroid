<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_cart_menu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/rv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_name"
        android:textSize="18sp"
        android:layout_toRightOf="@id/img_cart_menu"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/text_main"
        android:text="메뉴이름"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_price"
        android:layout_toRightOf="@id/img_cart_menu"
        android:layout_below="@id/cart_menu_name"
        android:layout_alignStart="@id/cart_menu_name"
        android:layout_marginTop="@dimen/margin_8"
        android:text="가격"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_delete_button"
        android:text="X"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_18"

        />

    <TextView
        android:id="@+id/txt_cart_menu_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_menu_price"
        android:layout_alignStart="@id/cart_menu_price"
        android:text="평균 30분 소요"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/margin_8"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_option_layout"
        android:orientation="vertical"
        android:layout_below="@+id/cart_menu_name"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        >


    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/img_cart_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_cart_option"
        android:orientation="vertical"
        >

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_cart_quantity"
        android:layout_below="@id/img_cart_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/ic_remove_black_24dp"
        android:textSize="24sp"
        android:id="@+id/cart_menu_minus"
        android:gravity="center"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="1"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_8"
        android:id="@+id/cart_menu_quantity"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_marginStart="@dimen/margin_8"
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/cart_menu_plus"
        />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="가격"

        android:id="@+id/cart_menu_result_price"
        android:textColor="@color/tangerine"
        />

</RelativeLayout>