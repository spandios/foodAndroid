<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <ImageView
        android:id="@+id/cart_menu_picture"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="33dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/cart_menu_picture"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/text_main"
        android:text="메뉴이름"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_menu_price"
        android:layout_toRightOf="@id/cart_menu_picture"
        android:layout_below="@id/cart_menu_name"
        android:layout_alignStart="@id/cart_menu_name"
        android:layout_marginTop="@dimen/margin_8"
        android:text="가격"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_delete_button"
        android:text="X"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_18"

        />

    <TextView
        android:id="@+id/txt_cart_menu_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_menu_price"
        android:layout_alignStart="@id/cart_menu_price"
        android:text="평균 30분 소요"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/margin_8"
        />

    <View
        android:layout_marginTop="12dp"
        android:layout_below="@id/cart_menu_picture"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#747373" />






    <LinearLayout
        android:id="@+id/layout_parent_cart_option"
        android:layout_below="@+id/cart_menu_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"

        >

        <LinearLayout
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/layout_cart_menu_necessary_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#747373" />


        <LinearLayout
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/layout_cart_menu_unnecessary_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_below="@id/layout_parent_cart_option"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#817e7e"
        android:layout_marginTop="@dimen/margin_8"
        />
    <TextView
        android:id="@+id/txt_cart_menu_count"
        android:layout_marginTop="20dp"
        android:layout_below="@id/layout_parent_cart_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수량"
        android:textSize="16sp"
        android:layout_marginStart="14dp"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:id="@+id/layout_cart_quantity"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_parent_cart_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_remove_black_24dp"
            android:textSize="24sp"
            android:id="@+id/cart_menu_minus"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_8"
            android:id="@+id/cart_menu_quantity"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_marginStart="@dimen/margin_8"
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/cart_menu_plus"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_below="@+id/layout_cart_quantity"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총"
            android:textColor="@color/tangerine"
            android:textSize="20sp"
            android:layout_marginRight="4dp"
            />
        <TextView
            android:id="@+id/cart_menu_result_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            android:gravity="right"
            android:text="가격"
            android:textColor="@color/tangerine"
            />

    </LinearLayout>


</RelativeLayout>