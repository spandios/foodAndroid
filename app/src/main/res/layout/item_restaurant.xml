<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp">

    <ImageView
        android:id="@+id/restaurantImageInList"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/fm" />


    <TextView
        android:id="@+id/restaurantNameInList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/restaurantImageInList"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28.2dp"

        android:lineSpacingExtra="4sp"
        android:text="식당이름"
        android:textColor="@color/charcoal_grey"
        android:textSize="18sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/restaurantReviewStringInList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="52.5dp"
        android:textSize="12sp"
        android:text="@string/review"
        />

    <TextView
        android:id="@+id/restaurantReviewCountInList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/restaurantReviewStringInList"
        android:layout_marginTop="52.5dp"
        android:textSize="12sp"
        android:text="123"
        android:textColor="@color/charcoal_grey"
        android:layout_marginLeft="10dp"
         />

    <TextView
        android:id="@+id/restaurantAdminCommentStringInList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/restaurantReviewCountInList"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="52.5dp"
        android:textSize="12sp"
        android:text="@string/restaurant_admin_comment"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/restaurantAdminCommentStringInList"
        android:textSize="12sp"
        android:text="123"
        android:layout_marginTop="52.5dp"
        android:textColor="@color/charcoal_grey"
        android:layout_marginLeft="10dp"
        android:id="@+id/restaurantAdminCommentInList"
        />


    <LinearLayout
        android:id="@+id/restaurantRatingStarInList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/restaurantReviewStringInList"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/restaurantImageInList"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/restaurantCommentCountInList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurantAdminCommentStringInList"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"

        android:text="123"
        android:layout_toRightOf="@+id/restaurantRatingStarInList"/>


    <!--<TextView-->
        <!--android:layout_below="@+id/restaurantCommentCountInList"-->
        <!--android:layout_toRightOf="@id/restaurantImageInList"-->
        <!--android:id="@+id/restaurantDistanceInList"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="3km" />-->


</RelativeLayout>