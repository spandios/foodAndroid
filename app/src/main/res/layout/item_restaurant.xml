<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/cur_location_item_image"
        android:layout_weight="3"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/cur_location_item_rest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="식당이름"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cur_location_item_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평점" />

                <TextView
                    android:id="@+id/cur_location_item_reviewcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="리뷰 수" />

            </LinearLayout>

            <TextView
                android:id="@+id/cur_location_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재위치에서 식당까지의 거리" />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>