<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.fooddeuk.restaurant.home.HomeRestaurantActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <RelativeLayout
      android:id="@+id/header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="1dp"
      android:padding="@dimen/margin_16"
      android:gravity="center_vertical"
      >

      <ImageView
        android:id="@+id/home_restaurant_back"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="@dimen/margin_8"
        android:src="@drawable/backbutton"
        />

      <TextView
        android:id="@+id/home_restaurant_menu_category"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_toRightOf="@id/home_restaurant_back"
        android:background="@drawable/custom_home_restaurant_top_menu_category"
        android:text="#아무거나"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

      <TextView
        android:id="@+id/home_restaurant_address"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_toRightOf="@id/home_restaurant_menu_category"
        android:background="@drawable/custom_home_restaurant_top_address"
        android:text="#논현동"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_toLeftOf="@+id/home_restaurant_map"
        android:src="@drawable/ic_filter"
        />

      <ImageView
        android:id="@+id/home_restaurant_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_find_location_black"
        />

    </RelativeLayout>

    <com.example.fooddeuk.custom.Divider
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginBottom="8dp"
      />

    <HorizontalScrollView
      android:id="@+id/header_option"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="4dp"
      android:scrollbars="none"
      android:visibility="gone"
      >

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.fooddeuk.custom.CustomHomeRestaurantMenuCategory
          android:id="@+id/header_option_menu_category"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone">

        </com.example.fooddeuk.custom.CustomHomeRestaurantMenuCategory>

        <com.example.fooddeuk.custom.CustomHomeRestaurantAddress
          android:id="@+id/header_option_address"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone">
        </com.example.fooddeuk.custom.CustomHomeRestaurantAddress>
      </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
      android:id="@+id/content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    </LinearLayout>

  </LinearLayout>
</FrameLayout>
